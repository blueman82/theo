{
  "mcpServers": {
    "theo": {
      "command": "uv",
      "args": ["run", "--directory", "/path/to/theo", "python", "-m", "theo"],
      "env": {
        "THEO_EMBEDDING_BACKEND": "mlx",
        "THEO_SQLITE_PATH": "~/.theo/theo.db",
        "THEO_LOG_LEVEL": "INFO"
      }
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-context.py",
            "timeout": 90
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-capture.py",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-monitor.py",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-prompt.py",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-security.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Task|Bash|Glob|Grep|Read|Edit|MultiEdit|Write|WebFetch|WebSearch|mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-precontext.py",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto_commit.py",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Bash|Read",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-recall.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Task|Bash|Glob|Grep|Read|Write|Edit|MultiEdit|WebFetch|WebSearch|mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-track.py",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-failure.py",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto|manual",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-compact.py",
            "timeout": 60000
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-permissions.py",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt|permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-notify.py",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-subagent.py",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/theo-stop.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
