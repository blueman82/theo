# Theo MCP Server Configuration
# Copy to .env and customize as needed

# =============================================================================
# Embedding Backend
# =============================================================================
# Options: mlx (Apple Silicon, faster) or ollama (fallback)
THEO_EMBEDDING_BACKEND=mlx

# MLX embedding model (HuggingFace path)
THEO_MLX_MODEL=mlx-community/mxbai-embed-large-v1

# =============================================================================
# Transcription (Voice-to-Text)
# =============================================================================
# MLX Whisper model for speech-to-text
THEO_WHISPER_MODEL=mlx-community/whisper-large-v3-mlx

# =============================================================================
# Text-to-Speech
# =============================================================================
# Orpheus-FastAPI TTS endpoint
THEO_TTS_URL=http://localhost:5005/v1/audio/speech
THEO_TTS_VOICE=tara

# Audio recording storage path
THEO_AUDIO_PATH=~/.theo/audio

# =============================================================================
# Ollama Configuration (only needed if THEO_EMBEDDING_BACKEND=ollama)
# =============================================================================
THEO_OLLAMA_HOST=http://localhost:11434
THEO_OLLAMA_MODEL=nomic-embed-text
THEO_OLLAMA_LLM_MODEL=gemma3:12b
THEO_OLLAMA_TIMEOUT=30

# =============================================================================
# Storage
# =============================================================================
# SQLite database (unified storage for vectors, metadata, edges)
THEO_SQLITE_PATH=~/.theo/theo.db

# =============================================================================
# Logging
# =============================================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
THEO_LOG_LEVEL=INFO

# =============================================================================
# Memory Defaults
# =============================================================================
THEO_DEFAULT_NAMESPACE=global
THEO_DEFAULT_IMPORTANCE=0.5
THEO_DEFAULT_TOKEN_BUDGET=4000
