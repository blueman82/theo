# Theo MCP Server Configuration
# Copy to .env - ALL variables are REQUIRED (no defaults)

# =============================================================================
# Embedding Backend
# =============================================================================
# Options: mlx (Apple Silicon, faster) or ollama (fallback)
THEO_EMBEDDING_BACKEND=mlx

# MLX model (HuggingFace path)
THEO_MLX_MODEL=mlx-community/mxbai-embed-large-v1

# =============================================================================
# Ollama Configuration
# =============================================================================
THEO_OLLAMA_HOST=http://localhost:11434
THEO_OLLAMA_MODEL=nomic-embed-text
THEO_OLLAMA_LLM_MODEL=gemma3:12b
THEO_OLLAMA_TIMEOUT=30

# =============================================================================
# Storage Paths
# =============================================================================
# ChromaDB persistent storage directory
THEO_DB_PATH=~/.theo/chroma_db
THEO_CHROMA_PATH=~/.theo/chroma_db

# SQLite database (for edges and validation events)
THEO_SQLITE_PATH=~/.theo/theo.db

# ChromaDB collection name
THEO_COLLECTION=documents
THEO_COLLECTION_NAME=documents

# =============================================================================
# Logging
# =============================================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
THEO_LOG_LEVEL=INFO

# =============================================================================
# Memory Defaults
# =============================================================================
THEO_DEFAULT_NAMESPACE=global
THEO_DEFAULT_IMPORTANCE=0.5
THEO_DEFAULT_TOKEN_BUDGET=4000
